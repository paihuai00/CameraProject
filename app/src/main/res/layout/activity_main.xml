<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzj.cameraproject.MainActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@drawable/bg_title_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="图 片 选 择"
            android:textColor="@android:color/white"
            android:textSize="50px" />

        <ImageView
            android:id="@+id/set_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50px"
            android:src="@drawable/ic_setting" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <ImageView
        android:id="@+id/show_choose_img"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:scaleType="center"
        android:src="@drawable/ic_default" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_color" />

    <TextView
        android:id="@+id/show_result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="图片识别结果为："
        android:textSize="20dp" />

    <Button
        android:id="@+id/choose_img_btn"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20px"
        android:background="@drawable/bg_choose_img"
        android:text="选择图片"
        android:textColor="@android:color/white" />

</com.zhy.autolayout.AutoLinearLayout>
